{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"resolveJsonModule": true,
		// Generate d.ts files
		// "declaration": true,
		// This compiler run should
		// only output d.ts files
		// "emitDeclarationOnly": true
		"removeComments": true,
		// "baseUrl": "./",
		"paths": {
			// "~/controllers/*": ["src/controllers/*"],
			// "~/prisma/*": ["prisma/*"],
			// "~/types/*": ["types.ts"]
		}
	},
	"include": ["src/**/*", "prisma/index.ts", "prisma/seed.ts", "index.ts"]
}
