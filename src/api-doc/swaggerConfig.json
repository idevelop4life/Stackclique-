{
	"openapi": "3.0.0",
	"info": {
		"title": "Stack clique",
		"description": "",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://127.0.0.1:500"
		}
	],
	"tags": [
		{
			"name": "authentication routes"
		}
	],
	"paths": {
		"/auth/signup": {
			"post": {
				"tags": ["authentication routes"],
				"summary": "signup using phone number or email",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"description": "user 'email' instead of 'phone_nmber' when signing with email",
								"example": {
									"username": "Jane David",
									"phone_number": "+2348107721911",
									"otp": 9250,
									"password": "ihjsbd"
								}
							}
						}
					}
				},
				"parameters": [
					{
						"name": "phone",
						"in": "query",
						"schema": {
							"type": "boolean"
						},
						"example": "true"
					}
				],
				"responses": {
					"200": {
						"description": "Successful response",
						"content": {
							"application/json": {}
						}
					}
				}
			}
		},
		"/auth/get-email-otp/{email}": {
			"get": {
				"tags": ["authentication routes"],
				"summary": "request email verification",
				"responses": {
					"200": {
						"description": "Successful response",
						"content": {
							"application/json": {}
						}
					}
				},
				"parameters": [
					{
						"name": "email",
						"in": "path",
						"schema": {
							"type": "string"
						},
						"example": "eazybundledata@gmail.com"
					}
				]
			}
		},
		"/auth/get-sms-otp/{phone_number}": {
			"get": {
				"tags": ["authentication routes"],
				"summary": "request phone nmber verification",
				"responses": {
					"200": {
						"description": "Successful response",
						"content": {
							"application/json": {}
						}
					}
				},
				"parameters": [
					{
						"name": "phone_number",
						"in": "path",
						"schema": {
							"type": "string"
						},
						"example": "+2348107721911"
					}
				]
			}
		},
		"/auth/login": {
			"post": {
				"tags": ["authentication routes"],
				"summary": "login",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"example": {
									"email": "jhg@bv.dns",
									"password": "disdujh"
								}
							}
						}
					}
				},
				"parameters": [
					{
						"name": "Authorization",
						"in": "header",
						"schema": {
							"type": "string"
						},
						"example": "Bearer token "
					}
				],
				"responses": {
					"200": {
						"description": "Successful response",
						"content": {
							"application/json": {}
						}
					}
				}
			}
		}
	}
}
