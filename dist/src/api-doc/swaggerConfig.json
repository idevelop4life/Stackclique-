{
    "openapi": "3.0.0",
    "info": {
        "title": "Stack clique",
        "description": "",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:500"
        }
    ],
    "tags": [
        {
            "name": "authentication routes"
        },
        {
            "name": "course routes"
        }
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "authentication routes"
                ],
                "summary": "signup using phone number",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "example": {
                                    "username": "Jane David",
                                    "phone_number": "+2348107721911",
                                    "otp": 9250,
                                    "password": "ihjsbd"
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "phone",
                        "in": "query",
                        "schema": {
                            "type": "boolean"
                        },
                        "example": "true"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/auth/get-email-otp/{email}": {
            "get": {
                "tags": [
                    "authentication routes"
                ],
                "summary": "request email verification",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true,
                        "example": "eazybundledata@gmail.com"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/auth/get-sms-otp/{phone_numebr}": {
            "get": {
                "tags": [
                    "authentication routes"
                ],
                "summary": "request phone nmber verification",
                "parameters": [
                    {
                        "name": "phone_numebr",
                        "in": "path",
                        "schema": {
                            "type": "number"
                        },
                        "required": true,
                        "example": "+2348107721911"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "authentication routes"
                ],
                "summary": "login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "example": {
                                    "phone_number": "+2350527410",
                                    "password": "disdujh"
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        },
                        "example": "Bearer token "
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/courses/{id}": {
            "get": {
                "tags": [
                    "course routes"
                ],
                "summary": "get single course",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "example": "3"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/courses": {
            "get": {
                "tags": [
                    "course routes"
                ],
                "summary": "get course 'pagnated'",
                "parameters": [
                    {
                        "name": "p",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "example": "3"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        }
    }
}
